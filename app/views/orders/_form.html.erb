      </div>

      <div class="story">
        <p>&nbsp;</p>
        <span class="title">
          Description
        </span>
        <div class="story-icon">
          <i class="fa fa-play"></i>
        </div>
        <div class="story-text">
          <%= @consult.description %>
        </div>
      </div>
  </div>
