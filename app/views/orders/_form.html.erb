    <div class="meeting form-group">
    
      <div class="calendar start-time-date">
          <label for="start_time_date">
            <% if @consult.meeting_limit > 1 %>
              Date of first appointment
            <% else %>
              Appointment Date
            <% end %>
          </label>
          <%= form.date_field("start_time_date", 
              min: Date.today, class: "start-time-date" ) %>
          <%# https://developer.mozilla.org/en-US/docs/Web/HTML/Element/input/date %>
